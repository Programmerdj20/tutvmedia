---
// Hero Section Component con Badges Oficiales
// Badges profesionales de Google Play, Roku y Fire TV
---

<section id="inicio" class="relative w-full h-[75vh] sm:h-[80vh] overflow-hidden flex items-center justify-center">
	<!-- Imagen de fondo con overlay -->
	<div
		class="absolute inset-0 bg-cover bg-center bg-no-repeat"
		style={{
			backgroundImage: 'url(/images/banner_top.webp)',
		}}
	></div>

	<!-- Overlay oscuro para legibilidad -->
	<div class="absolute inset-0 bg-black/50"></div>

	<!-- Contenido centrado -->
	<div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
		<!-- Título Principal -->
		<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-8 sm:mb-6 leading-tight">
			Todo el Entretenimiento Que Quieres, Cuando Quieras
		</h1>

		<!-- Descripción -->
		<p class="text-lg sm:text-xl text-gray-100 mb-12 sm:mb-10 max-w-2xl mx-auto leading-relaxed">
			Accede al instante a canales y contenido on-demand con transmisión rápida y confiable.
		</p>

		<!-- Texto de Plataformas -->
		<p class="text-xl sm:text-2xl font-semibold text-white mb-8">
			Disfruta TUTV MEDIA en todos tus dispositivos
		</p>

		<!-- Badges de Plataformas -->
		<div class="grid grid-cols-2 sm:grid-cols-3 gap-3 sm:gap-6 w-full max-w-2xl mx-auto px-4 sm:px-0">

			<!-- Badge 1: Google Play -->
			<a
				href="https://play.google.com/store/apps/details?id=com.onestream.oneplaymobile"
				target="_blank"
				rel="noopener noreferrer"
				class="platform-badge"
				aria-label="Descargar en Google Play"
			>
				<div class="platform-badge-content">
					<img src="/images/gplay.svg" alt="Google Play Logo" class="platform-logo"/>
					<div class="platform-text">
						<p class="platform-label">Disponible en</p>
						<p class="platform-name">Google Play</p>
					</div>
				</div>
			</a>

			<!-- Badge 2: Roku -->
			<button
				data-modal-trigger="roku-modal"
				class="platform-badge"
				aria-label="Obtener en Roku"
			>
				<div class="platform-badge-content">
					<img src="/images/roku.svg" alt="Roku Logo" class="platform-logo"/>
					<div class="platform-text">
						<p class="platform-label">Disponible en</p>
						<p class="platform-name">Roku</p>
					</div>
				</div>
			</button>

			<!-- Badge 3: Fire TV -->
			<button
				data-modal-trigger="firestick-modal"
				class="platform-badge"
				aria-label="Obtener en Amazon Fire TV"
			>
				<div class="platform-badge-content">
					<img src="/images/firetv.svg" alt="Fire TV Logo" class="platform-logo"/>
					<div class="platform-text">
						<p class="platform-label">Disponible en</p>
						<p class="platform-name">Amazon Fire TV</p>
					</div>
				</div>
			</button>

		</div>
	</div>
</section>

<!-- Modal Roku -->
<dialog id="roku-modal" class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<img src="/images/roku.svg" alt="Roku Logo" class="w-16 h-16 mx-auto mb-4"/>
		</div>

		<div class="modal-body">
			<div class="instruction-box">
				<p class="text-base sm:text-lg leading-relaxed">
					Busca nuestra app por el siguiente nombre:
				</p>
				<div class="code-box">
					<code class="text-cyan-400 font-bold text-xl">PDVR 2.0</code>
				</div>
			</div>
		</div>

		<div class="modal-footer">
			<button data-modal-close class="btn-primary w-full sm:w-auto">
				Entendido
			</button>
		</div>
	</div>
</dialog>

<!-- Modal Fire TV -->
<dialog id="firestick-modal" class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<img src="/images/firetv.svg" alt="Fire TV Logo" class="w-16 h-16 mx-auto mb-4"/>
		</div>

		<div class="modal-body">
			<div class="instruction-box">
				<p class="text-base sm:text-lg leading-relaxed mb-4">
					Usa el código Downloader:
				</p>
				<div class="code-box">
					<code class="text-cyan-400 font-bold text-2xl">5401000</code>
				</div>

				<div class="divider-cyan my-6"></div>

				<p class="text-base sm:text-lg leading-relaxed mb-4">
					O ingresa a:
				</p>
				<div class="code-box">
					<a
						href="https://tinyurl.com/tutvmedia"
						target="_blank"
						rel="noopener noreferrer"
						class="text-cyan-400 font-bold text-lg hover:text-cyan-300 underline"
					>
						tinyurl.com/tutvmedia
					</a>
				</div>
			</div>
		</div>

		<div class="modal-footer">
			<button data-modal-close class="btn-primary w-full sm:w-auto">
				Entendido
			</button>
		</div>
	</div>
</dialog>

<!-- Estilos para badges y modales -->
<style>
	/* ==========================================
	   BADGES DE PLATAFORMAS - Estilo profesional
	   ========================================== */

	.platform-badge {
		display: inline-flex;
		align-items: center;
		justify-content: flex-start;
		height: 3.5rem;
		background: white;
		border: none;
		border-radius: 1.75rem;
		padding: 0.5rem 1rem;
		cursor: pointer;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		transform: translateZ(0);
		gap: 0.75rem;
	}

	.platform-badge-content {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		width: 100%;
	}

	.platform-logo {
		height: 2rem;
		width: 2rem;
		flex-shrink: 0;
		display: block;
	}

	.platform-text {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.platform-label {
		margin: 0;
		font-size: 0.65rem;
		color: #666666;
		font-weight: 600;
		text-transform: uppercase;
		line-height: 1;
	}

	.platform-name {
		margin: 0;
		font-size: 0.9rem;
		color: #000000;
		font-weight: 700;
		line-height: 1.1;
	}

	.platform-badge:hover {
		transform: translateY(-3px);
		box-shadow: 0 8px 20px rgba(0, 206, 255, 0.25);
	}

	.platform-badge:active {
		transform: translateY(-1px);
	}

	/* Fire TV spanning 2 columns en mobile para centrado */
	.platform-badge:nth-child(3) {
		grid-column: 1 / -1;
		max-width: 280px;
		margin: 0 auto;
	}

	@media (min-width: 640px) {
		.platform-badge {
			height: 4rem;
			padding: 0.6rem 1.2rem;
		}

		.platform-logo {
			height: 3rem;
			width: 3rem;
		}

		.platform-label {
			font-size: 0.7rem;
		}

		.platform-name {
			font-size: 1rem;
		}

		/* Reset para Fire TV en desktop */
		.platform-badge:nth-child(3) {
			grid-column: auto;
			max-width: none;
		}
	}

	/* ==========================================
	   MODALES - Centrado perfecto (Tailwind v4)
	   ========================================== */

	.modal-dialog {
		margin: auto;
		border: none;
		background: transparent;
		padding: 0;
		max-width: min(90vw, 500px);
		width: 100%;
		border-radius: 1.5rem;
	}

	.modal-dialog::backdrop {
		background: rgba(0, 0, 0, 0.85);
		backdrop-filter: blur(10px);
		animation: fadeIn 0.25s ease-out;
	}

	.modal-content {
		background: linear-gradient(145deg, rgba(10, 29, 55, 0.98) 0%, rgba(5, 11, 21, 1) 100%);
		border: 2px solid rgba(0, 206, 255, 0.4);
		border-radius: 1.5rem;
		padding: 2rem;
		box-shadow:
			0 0 60px rgba(0, 206, 255, 0.3),
			0 25px 50px rgba(0, 0, 0, 0.5);
		animation: slideUpBounce 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
	}

	.modal-header {
		text-align: center;
		margin-bottom: 2rem;
		padding-bottom: 1.5rem;
		border-bottom: 1px solid rgba(0, 206, 255, 0.2);
	}

	.modal-body {
		margin-bottom: 2rem;
	}

	.instruction-box {
		color: white;
		text-align: center;
	}

	.code-box {
		margin-top: 1rem;
		padding: 1.5rem;
		border-radius: 0.75rem;
		background: rgba(0, 206, 255, 0.08);
		border: 2px solid rgba(0, 206, 255, 0.3);
		backdrop-filter: blur(5px);
		transition: all 0.3s ease;
	}

	.code-box:hover {
		background: rgba(0, 206, 255, 0.15);
		border-color: rgba(0, 206, 255, 0.5);
	}

	.modal-footer {
		display: flex;
		justify-content: center;
		padding-top: 1.5rem;
		border-top: 1px solid rgba(0, 206, 255, 0.2);
	}

	/* ==========================================
	   ANIMACIONES
	   ========================================== */

	@keyframes slideUpBounce {
		0% {
			opacity: 0;
			transform: translateY(30px) scale(0.95);
		}
		70% {
			transform: translateY(-3px) scale(1.01);
		}
		100% {
			opacity: 1;
			transform: translateY(0) scale(1);
		}
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	/* ==========================================
	   RESPONSIVE
	   ========================================== */

	@media (max-width: 640px) {
		.modal-dialog {
			max-width: 95vw;
		}

		.modal-content {
			padding: 1.5rem;
		}

		.code-box {
			padding: 1rem;
		}
	}
</style>

<!-- Script para manejar modales -->
<script>
	function openModal(modalId: string) {
		const modal = document.getElementById(modalId) as HTMLDialogElement;
		if (modal) {
			modal.showModal();
			document.body.style.overflow = 'hidden';
		}
	}

	function closeModal(modal: HTMLDialogElement) {
		if (modal) {
			modal.close();
			document.body.style.overflow = '';
		}
	}

	document.addEventListener('DOMContentLoaded', () => {
		const modalTriggers = document.querySelectorAll('[data-modal-trigger]');
		modalTriggers.forEach((trigger) => {
			trigger.addEventListener('click', () => {
				const modalId = trigger.getAttribute('data-modal-trigger');
				if (modalId) {
					openModal(modalId);
				}
			});
		});

		const modalCloseButtons = document.querySelectorAll('[data-modal-close]');
		modalCloseButtons.forEach((button) => {
			button.addEventListener('click', () => {
				const modal = button.closest('dialog') as HTMLDialogElement;
				closeModal(modal);
			});
		});

		const modals = document.querySelectorAll('.modal-dialog');
		modals.forEach((modal) => {
			modal.addEventListener('click', (event) => {
				const dialogElement = modal as HTMLDialogElement;
				const rect = dialogElement.getBoundingClientRect();
				const clickedInDialog =
					rect.top <= event.clientY &&
					event.clientY <= rect.top + rect.height &&
					rect.left <= event.clientX &&
					event.clientX <= rect.left + rect.width;

				if (!clickedInDialog) {
					closeModal(dialogElement);
				}
			});
		});
	});
</script>
