			<button data-modal-close class="btn-primary w-full sm:w-auto">
				Entendido
			</button>
		</div>
	</div>
</dialog>

<!-- Estilos para botones de plataformas y modales -->
<style>
	/* Botones de Plataformas */
	.platform-btn {
		@apply flex flex-col items-center justify-center gap-3 px-8 py-6 rounded-2xl transition-all duration-300 transform cursor-pointer;
		background: rgba(10, 29, 55, 0.7);
		border: 2px solid rgba(0, 206, 255, 0.3);
		backdrop-filter: blur(10px);
		color: white;
		min-width: 140px;
	}

	.platform-btn:hover {
		transform: translateY(-5px) scale(1.05);
		border-color: rgba(0, 206, 255, 0.8);
		box-shadow: 0 15px 35px rgba(0, 206, 255, 0.4);
		background: rgba(10, 29, 55, 0.9);
	}

	.platform-btn:active {
		transform: translateY(-2px) scale(1.02);
	}

	.platform-btn svg {
		transition: transform 0.3s ease;
	}

	.platform-btn:hover svg {
		transform: scale(1.1) rotate(5deg);
	}

	/* Modal Dialog Nativo */
	.modal-dialog {
		border: none;
		background: transparent;
		padding: 0;
		max-width: 90vw;
		width: 500px;
		border-radius: 1.5rem;
		box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
	}

	.modal-dialog::backdrop {
		background: rgba(0, 0, 0, 0.8);
		backdrop-filter: blur(8px);
		animation: fadeIn 0.3s ease-out;
	}

	.modal-content {
		background: linear-gradient(145deg, rgba(10, 29, 55, 0.95) 0%, rgba(5, 11, 21, 0.98) 100%);
		border: 2px solid rgba(0, 206, 255, 0.4);
		border-radius: 1.5rem;
		padding: 2rem;
		animation: slideUp 0.4s ease-out;
		box-shadow: 0 0 60px rgba(0, 206, 255, 0.3);
	}

	.modal-header {
		text-align: center;
		margin-bottom: 2rem;
		padding-bottom: 1.5rem;
		border-bottom: 1px solid rgba(0, 206, 255, 0.2);
	}

	.modal-body {
		margin-bottom: 2rem;
	}

	.instruction-box {
		color: white;
		text-align: center;
	}

	.code-box {
		@apply mt-4 p-6 rounded-xl;
		background: rgba(0, 206, 255, 0.1);
		border: 2px solid rgba(0, 206, 255, 0.3);
		backdrop-filter: blur(5px);
	}

	.code-box:hover {
		background: rgba(0, 206, 255, 0.15);
		border-color: rgba(0, 206, 255, 0.5);
	}

	.modal-footer {
		display: flex;
		justify-content: center;
		padding-top: 1.5rem;
		border-top: 1px solid rgba(0, 206, 255, 0.2);
	}

	/* Animación de apertura del modal */
	@keyframes slideUp {
		from {
			opacity: 0;
			transform: translateY(30px) scale(0.95);
		}
		to {
			opacity: 1;
			transform: translateY(0) scale(1);
		}
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	/* Responsive adjustments */
	@media (max-width: 640px) {
		.modal-dialog {
			width: 95vw;
			max-width: 95vw;
		}

		.modal-content {
			padding: 1.5rem;
		}

		.code-box {
			padding: 1rem;
		}
	}
</style>

<!-- Script para manejar modales -->
<script>
	// Función para abrir modales
	function openModal(modalId: string) {
		const modal = document.getElementById(modalId) as HTMLDialogElement;
		if (modal) {
			modal.showModal();
		}
	}

	// Función para cerrar modales
	function closeModal(modal: HTMLDialogElement) {
		if (modal) {
			modal.close();
		}
	}

	// Event listeners para botones que abren modales
	document.addEventListener('DOMContentLoaded', () => {
		// Abrir modales con botones trigger
		const modalTriggers = document.querySelectorAll('[data-modal-trigger]');
		modalTriggers.forEach((trigger) => {
			trigger.addEventListener('click', () => {
				const modalId = trigger.getAttribute('data-modal-trigger');
				if (modalId) {
					openModal(modalId);
				}
			});
		});

		// Cerrar modales con botones close
		const modalCloseButtons = document.querySelectorAll('[data-modal-close]');
		modalCloseButtons.forEach((button) => {
			button.addEventListener('click', () => {
				const modal = button.closest('dialog') as HTMLDialogElement;
				closeModal(modal);
			});
		});

		// Cerrar modal al hacer click fuera del contenido (en el backdrop)
		const modals = document.querySelectorAll('.modal-dialog');
		modals.forEach((modal) => {
			modal.addEventListener('click', (event) => {
				const dialogElement = modal as HTMLDialogElement;
				const rect = dialogElement.getBoundingClientRect();
				const clickedInDialog =
					rect.top <= event.clientY &&
					event.clientY <= rect.top + rect.height &&
					rect.left <= event.clientX &&
					event.clientX <= rect.left + rect.width;

				if (!clickedInDialog) {
					closeModal(dialogElement);
				}
			});
		});

		// Cerrar modal con tecla ESC (nativo del elemento dialog)
	});
</script>
