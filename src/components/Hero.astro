					<path d="M13.5 24L26.25 36.75L29.25 33.75L16.5 21L13.5 24Z" fill="white"/>
					<path d="M29.25 14.25L26.25 11.25L32.25 5.25L35.25 8.25L29.25 14.25Z" fill="white" opacity="0.8"/>
					<path d="M29.25 33.75L26.25 36.75L32.25 42.75L35.25 39.75L29.25 33.75Z" fill="white" opacity="0.8"/>
				</svg>
				<span class="font-bold text-sm sm:text-base">Google Play</span>
			</a>

			<!-- Roku Button (Modal) -->
			<button
				data-modal-trigger="roku-modal"
				class="platform-btn"
				aria-label="Información para Roku"
			>
				<svg class="w-12 h-12 sm:w-14 sm:h-14" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
					<rect x="6" y="6" width="36" height="36" rx="6" fill="#6F36BC"/>
					<path d="M18 16C18 15.4477 18.4477 15 19 15H22C22.5523 15 23 15.4477 23 16V20H18V16Z" fill="white"/>
					<path d="M18 22H23V32C23 32.5523 22.5523 33 22 33H19C18.4477 33 18 32.5523 18 32V22Z" fill="white"/>
					<path d="M25 22L30 33H26L23 24V22H25Z" fill="white"/>
				</svg>
				<span class="font-bold text-sm sm:text-base">Roku</span>
			</button>

			<!-- Fire Stick Button (Modal) -->
			<button
				data-modal-trigger="firestick-modal"
				class="platform-btn"
				aria-label="Información para Fire Stick"
			>
				<svg class="w-12 h-12 sm:w-14 sm:h-14" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
					<circle cx="24" cy="24" r="18" fill="#FF9900"/>
