<div
    id="promo-popup"
    class="fixed inset-0 z-[100] flex items-center justify-center bg-black/80 opacity-0 invisible transition-all duration-700 ease-out backdrop-blur-sm"
>
    <div
        class="relative w-full max-w-lg mx-4 md:mx-auto transform scale-95 transition-transform duration-500"
        id="promo-content"
    >
        <!-- Close Button -->
        <button
            id="close-promo"
            class="absolute -top-12 right-0 md:-right-12 text-white hover:text-blue-400 transition-colors p-2 group"
            aria-label="Cerrar promoción"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-10 w-10 drop-shadow-lg transform group-hover:scale-110 transition-transform"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>

        <!-- Image -->
        <div
            class="relative rounded-2xl overflow-hidden shadow-2xl border border-white/10 ring-1 ring-white/20"
        >
            <img
                src="/images/Promo_navidad.webp"
                alt="Promoción Especial de Navidad"
                class="w-full h-auto object-cover block"
                loading="eager"
            />
            <!-- Optional: Shine effect overlay -->
            <div
                class="absolute inset-0 bg-gradient-to-tr from-white/5 to-transparent pointer-events-none"
            >
            </div>
        </div>
    </div>
</div>

<script>
    const popup = document.getElementById("promo-popup");
    const closeBtn = document.getElementById("close-promo");
    const promoContent = document.getElementById("promo-content");

    // Show popup after 1 second
    setTimeout(() => {
        if (popup && promoContent) {
            popup.classList.remove("opacity-0", "invisible");
            promoContent.classList.remove("scale-95");
            promoContent.classList.add("scale-100");
        }
    }, 1000);

    // Close functionality
    const closePopup = () => {
        if (popup && promoContent) {
            popup.classList.add("opacity-0", "invisible");
            promoContent.classList.toggle("scale-95");

            // Optional: Remove from DOM after transition to avoid z-index issues
            setTimeout(() => {
                popup.remove();
            }, 700);
        }
    };

    closeBtn?.addEventListener("click", closePopup);

    // Close when clicking outside content (on backdrop)
    popup?.addEventListener("click", (e) => {
        if (e.target === popup) {
            closePopup();
        }
    });

    // Close on Escape key
    document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && !popup?.classList.contains("invisible")) {
            closePopup();
        }
    });
</script>
