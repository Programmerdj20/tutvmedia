---
// Componente WhyChooseUs - Sección "¿Por qué elegirnos?"
// Características principales con animación fade-in al scroll

interface Feature {
  title: string;
  description: string;
  icon: string;
}

const features: Feature[] = [
  {
    title: "+1000 Canales en Vivo",
    description: "Fútbol, deportes, series, películas y más en tiempo real",
    icon: `<svg class="w-10 h-10 text-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5.36 4.364l-.707-.707M9 12a3 3 0 106 0 3 3 0 00-6 0z"></path>
    </svg>`,
  },
  {
    title: "Hasta 3 Dispositivos",
    description: "Smart TV, móvil y tablet simultáneamente",
    icon: `<svg class="w-10 h-10 text-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 20h8a2 2 0 002-2V6a2 2 0 00-2-2H8a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
    </svg>`,
  },
  {
    title: "Contenido HD y FHD",
    description: "Calidad premium en todos tus dispositivos",
    icon: `<svg class="w-10 h-10 text-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
    </svg>`,
  },
  {
    title: "Estabilidad Garantizada",
    description: "Streaming sin interrupciones",
    icon: `<svg class="w-10 h-10 text-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>`,
  },
  {
    title: "Soporte 24/7",
    description: "Asistencia técnica siempre disponible",
    icon: `<svg class="w-10 h-10 text-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
    </svg>`,
  },
  {
    title: "VOD Ilimitado",
    description: "Miles de películas y series on demand",
    icon: `<svg class="w-10 h-10 text-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>`,
  },
];
---

<section
  class="w-full py-20 lg:py-28 bg-gradient-to-b from-almost-black via-navy/50 to-almost-black relative overflow-hidden"
>
  <!-- Elementos decorativos de fondo -->
  <div
    class="absolute inset-0 opacity-30"
    style="background: radial-gradient(ellipse at 50% 50%, rgba(0, 206, 255, 0.1) 0%, transparent 70%)"
  >
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Encabezado de la sección -->
    <div class="text-center mb-16 animate-fadeInUp">
      <h2
        class="text-4xl sm:text-5xl lg:text-5xl font-bold font-display mb-6 text-white"
      >
        ¿Por qué elegir <span class="gradient-text">TUTV MEDIA</span>?
      </h2>
      <p class="text-lg text-soft-gray max-w-3xl mx-auto leading-relaxed">
        Accede a TUTV MEDIA (antes TUTV-ONLINE) en España, Perú, Ecuador, Estados
        Unidos, Italia y Portugal. Disfruta más de 1000 canales en vivo y un amplio
        catálogo de fútbol, deportes, series y películas en calidad FHD. Compatible
        con Android TV, Smart TV Box, Firestick, celulares y tablets.
      </p>
      <p class="text-base text-soft-gray/80 max-w-3xl mx-auto mt-4">
        Ofrecemos contenido VOD ilimitado, estabilidad garantizada y hasta 3 pantallas
        simultáneas, pensado para brindarte una experiencia confiable, fluida y
        perfecta para toda la familia.
      </p>
    </div>

    <!-- Grid de características -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {
        features.map((feature, index) => (
          <div
            class="card group relative animate-fadeInUp hover:shadow-cyan transition-all duration-500"
            style={`animation-delay: ${index * 100}ms`}
          >
            <!-- Icono -->
            <div class="mb-4 inline-flex p-3 bg-cyan/10 rounded-lg group-hover:bg-cyan/20 transition-colors duration-300">
              <Fragment set:html={feature.icon} />
            </div>

            <!-- Contenido -->
            <h3 class="text-xl font-bold text-white mb-3 group-hover:text-cyan transition-colors duration-300">
              {feature.title}
            </h3>
            <p class="text-soft-gray leading-relaxed">
              {feature.description}
            </p>

            <!-- Línea decorativa en hover -->
            <div class="absolute bottom-0 left-0 h-1 bg-gradient-to-r from-cyan to-purple-500 opacity-0 group-hover:opacity-100 transition-opacity duration-500 w-full rounded-b-lg"></div>
          </div>
        ))
      }
    </div>

    <!-- Tarjeta especial destacada -->
    <div
      class="relative animate-fadeInUp mt-16 lg:mt-20"
      style="animation-delay: 700ms"
    >
      <div
        class="card-premium relative overflow-hidden bg-gradient-to-br from-cyan/20 via-navy/40 to-purple-900/20 border-l-4 border-l-cyan"
      >
        <!-- Fondo decorativo animado -->
        <div
          class="absolute inset-0 opacity-20"
          style="background: radial-gradient(circle at 100% 50%, rgba(0, 206, 255, 0.2) 0%, transparent 50%)"
        >
        </div>

        <div class="relative z-10 py-8 px-6 sm:px-8">
          <h3 class="text-2xl sm:text-3xl font-bold gradient-text mb-4 font-display">
            El Mejor Entretenimiento en tu Idioma
          </h3>
          <p class="text-soft-gray leading-relaxed mb-4">
            TUTV MEDIA (antes TUTV-ONLINE) es tu proveedor oficial de entretenimiento
            premium. Te ofrecemos una programación exclusiva de canales latinos y
            europeos, con calidad superior, soporte local y atención personalizada
            para garantizarte la mejor experiencia.
          </p>
          <p class="text-soft-gray leading-relaxed">
            Si buscabas TUTV, TUTV-ONLINE o un servicio de TV confiable y de alto
            nivel, has llegado al lugar indicado. Obtén tu suscripción a TUTV MEDIA
            hoy mismo y disfruta entretenimiento sin límites.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // IntersectionObserver para animación fade-in al scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: "0px 0px -50px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("show");
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Observar todos los elementos con animate-fadeInUp
  document.querySelectorAll("[class*='animate-fadeInUp']").forEach((el) => {
    observer.observe(el);
  });
</script>

<style>
  .card {
    position: relative;
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(0, 206, 255, 0.2);
    backdrop-filter: blur(10px);
    border-radius: 0.75rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .card:hover {
    background: rgba(15, 23, 42, 0.8);
    border-color: rgba(0, 206, 255, 0.5);
    box-shadow:
      0 10px 25px rgba(0, 206, 255, 0.2),
      inset 0 0 20px rgba(0, 206, 255, 0.1);
    transform: translateY(-8px);
  }

  .card-premium {
    background: rgba(10, 29, 55, 0.5);
    border: 1px solid rgba(0, 206, 255, 0.3);
    backdrop-filter: blur(12px);
    border-radius: 0.75rem;
    padding: 2rem;
    transition: all 0.4s ease;
  }

  .card-premium:hover {
    border-color: rgba(0, 206, 255, 0.6);
    background: rgba(10, 29, 55, 0.8);
    box-shadow: 0 15px 40px rgba(0, 206, 255, 0.25);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeInUp {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .show {
    opacity: 1;
  }
</style>
