---
import '../styles/globals.css';

export interface Props {
	title?: string;
	description?: string;
}

const { title = 'TutvMedia - Películas y Series', description = 'Descubre películas y series populares' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<!-- Meta Tags -->
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#00CEFF" />
		<meta name="author" content="TutvMedia" />
		<meta name="keywords" content="películas, series, cine, streaming, descubrimiento" />

		<!-- Favicon -->
		<link rel="icon" type="image/webp" href="/favicon.webp" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />

		<!-- Google Fonts - Optimizado para rendimiento -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Exo+2:wght@400;600;700;800&family=Inter:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
	</head>
	<body class="bg-white text-gray-900 antialiased font-sans scroll-smooth">
		<!-- Overlay para sidebar -->
		<div
			id="overlay"
			class="fixed inset-0 bg-black/50 opacity-0 invisible transition-all duration-300 z-40"
			data-overlay
		></div>

		<!-- Sidebar/Drawer Mobile -->
		<aside
			id="sidebar"
			class="fixed inset-y-0 right-0 w-80 bg-blue-100 border-r border-blue-200 transform translate-x-full transition-transform duration-300 ease-in-out z-50 overflow-y-auto"
			data-sidebar
		>
			<div class="p-6">
				<!-- Botón cerrar sidebar -->
				<button
					id="closeSidebar"
					class="absolute top-4 right-4 p-2 rounded-lg hover:bg-blue-200 transition-colors text-gray-700"
					aria-label="Cerrar menú"
				>
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>

				<!-- Logo en sidebar -->
				<img src="/images/Logo_navbar.webp" alt="TUTV.MEDIA" class="h-12 mb-8" />

				<!-- Links del sidebar -->
				<nav class="space-y-6">
					<a href="#inicio" class="block px-4 py-3 rounded-lg text-gray-700 hover:bg-blue-200 hover:text-blue-700 transition-colors font-medium" data-sidebar-link>
						Inicio
					</a>
					<a href="#planes" class="block px-4 py-3 rounded-lg text-gray-700 hover:bg-blue-200 hover:text-blue-700 transition-colors font-medium" data-sidebar-link>
						Planes
					</a>
					<a href="#" class="block px-4 py-3 rounded-lg text-gray-700 hover:bg-blue-200 hover:text-blue-700 transition-colors font-medium" data-sidebar-link>
						Instalación
					</a>
					<a href="#" class="block px-4 py-3 rounded-lg text-gray-700 hover:bg-blue-200 hover:text-blue-700 transition-colors font-medium" data-sidebar-link>
						Reseller
					</a>
					<a href="#" class="block px-4 py-3 rounded-lg text-gray-700 hover:bg-blue-200 hover:text-blue-700 transition-colors font-medium" data-sidebar-link>
						Contacto
					</a>
				</nav>
			</div>
		</aside>

		<!-- Header/Navbar -->
		<header class="sticky top-0 z-40 bg-[#050505] border-b border-blue-200 shadow-sm">
			<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
				<!-- Logo (Desktop y Mobile) -->
				<a href="/" class="flex items-center">
					<img src="/images/Logo_navbar.webp" alt="TUTV.MEDIA" class="h-12 md:h-14" />
				</a>

				<!-- Navegación Desktop (oculta en móvil) -->
				<div class="hidden md:flex items-center gap-8">
					<a href="#inicio" class="text-white hover:text-blue-300 transition-colors font-medium">
						Inicio
					</a>
					<a href="#planes" class="text-white hover:text-blue-300 transition-colors font-medium">
						Planes
					</a>
					<a href="#" class="text-white hover:text-blue-300 transition-colors font-medium">
						Instalación
					</a>
					<a href="#" class="text-white hover:text-blue-300 transition-colors font-medium">
						Reseller
					</a>
					<a href="#" class="text-white hover:text-blue-300 transition-colors font-medium">
						Contacto
					</a>
				</div>

				<!-- Botón Hamburguesa (solo móvil) -->
				<button
					id="hamburger"
					class="md:hidden p-2 rounded-lg hover:bg-blue-100 transition-colors group"
					aria-label="Abrir menú"
					aria-expanded="false"
				>
					<svg class="w-6 h-6 group-hover:stroke-[#050505]" fill="none" stroke="white" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</nav>
		</header>

		<!-- Main Content -->
		<main class="min-h-screen">
			<slot />
		</main>

		<!-- Footer -->
		<footer class="bg-gradient-to-b from-blue-50 to-white border-t border-blue-100 py-12 mt-20">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
					<div>
						<h3 class="font-bold text-gray-900 mb-4">TutvMedia</h3>
						<p class="text-sm text-gray-600">
							Tu plataforma favorita para descubrir películas y series de todo el mundo.
						</p>
					</div>
					<div>
						<h4 class="font-semibold text-gray-900 mb-4">Productos</h4>
						<ul class="space-y-2 text-sm text-gray-600">
							<li><a href="#" class="hover:text-blue-600 transition-colors">Películas</a></li>
							<li><a href="#" class="hover:text-blue-600 transition-colors">Series</a></li>
							<li><a href="#" class="hover:text-blue-600 transition-colors">Estrenos</a></li>
						</ul>
					</div>
					<div>
						<h4 class="font-semibold text-gray-900 mb-4">Comunidad</h4>
						<ul class="space-y-2 text-sm text-gray-600">
							<li><a href="#" class="hover:text-blue-600 transition-colors">Blog</a></li>
							<li><a href="#" class="hover:text-blue-600 transition-colors">GitHub</a></li>
							<li><a href="#" class="hover:text-blue-600 transition-colors">Twitter</a></li>
						</ul>
					</div>
					<div>
						<h4 class="font-semibold text-gray-900 mb-4">Legal</h4>
						<ul class="space-y-2 text-sm text-gray-600">
							<li><a href="#" class="hover:text-blue-600 transition-colors">Privacidad</a></li>
							<li><a href="#" class="hover:text-blue-600 transition-colors">Términos</a></li>
							<li><a href="#" class="hover:text-blue-600 transition-colors">Contacto</a></li>
						</ul>
					</div>
				</div>
				<div class="border-t border-blue-100 pt-8">
					<p class="text-center text-sm text-gray-600">
						© 2024 TutvMedia. Todos los derechos reservados.
					</p>
				</div>
			</div>
		</footer>

		<!-- Script para manejar el sidebar y smooth scroll -->
		<script>
			const hamburger = document.getElementById('hamburger');
			const sidebar = document.getElementById('sidebar');
			const overlay = document.getElementById('overlay');
			const closeSidebar = document.getElementById('closeSidebar');
			const sidebarLinks = document.querySelectorAll('[data-sidebar-link]');

			// Función para abrir el sidebar
			function openSidebar() {
				sidebar?.classList.remove('translate-x-full');
				sidebar?.classList.add('translate-x-0');
				overlay?.classList.remove('opacity-0', 'invisible');
				overlay?.classList.add('opacity-100');
				document.body.classList.add('overflow-hidden');
			}

			// Función para cerrar el sidebar
			function closeSidebarFn() {
				sidebar?.classList.add('translate-x-full');
				sidebar?.classList.remove('translate-x-0');
				overlay?.classList.add('opacity-0', 'invisible');
				overlay?.classList.remove('opacity-100');
				document.body.classList.remove('overflow-hidden');
			}

			// Event listeners
			hamburger?.addEventListener('click', openSidebar);
			closeSidebar?.addEventListener('click', closeSidebarFn);
			overlay?.addEventListener('click', closeSidebarFn);

			// Cerrar al hacer clic en un link
			sidebarLinks.forEach((link) => {
				link.addEventListener('click', closeSidebarFn);
			});

			// Smooth scroll mejorado con velocidad controlada
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', function (e) {
					const href = this.getAttribute('href');
					// Solo interceptar si es un hash válido (no solo "#")
					if (href !== '#' && href.startsWith('#')) {
						e.preventDefault();
						const target = document.querySelector(href);
						if (target) {
							// Usar scrollIntoView con opciones de smooth scroll
							target.scrollIntoView({
								behavior: 'smooth',
								block: 'start'
							});
						}
					}
				});
			});
		</script>
	</body>
</html>
